{% extends 'base.html.j2' %}

{% block title %}Pilotica - Agents{% endblock %}

{% block body %}
    <div class="container">
        {% if agents %}
            <h3 style="margin-top: 50px; color: white;">Agents</h3>
            <table id="agents_table" class="table table-striped table-dark">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">UUID</th>
                        <th scope="col">Hostname</th>
                        <th scope="col">Last Seen</th>
                        <th scope="col">Queued Tasks</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for agent in agents %}
                        <tr>
                            <td>{{ agent["id"] }}</td>
                            <td>{{ agent["uuid"] }}</td>
                            <td>{{ agent["hostname"] }}</td>
                            <td>{{ agent["beacon"] }}</td>
                            <td>{{ agent["task_count"] }}</td>
                            <td>
                                <button class="btn btn-secondary"><i class="bi bi-terminal"></i></button>
                                <button class="btn btn-danger" onclick="delete_agent('{{ agent['id'] }}')"><i class="bi bi-trash fs-6"></i></button>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
            <button class="btn btn-danger text-white" onclick="delete_all()">Delete All</button>
        {% else %}
            <h3 style="margin-top: 50px; color: white;">No Agents in database</h3>
        {% endif %}
    </div>
    <script>
        function delete_agent(id) {
            fetch("{{ url_for('service.agents') }}?id="+id, {
                method: 'DELETE',
                headers: {
                    'key': 'secret-key',
                }
            }).then(response => response.text())
            .then(data => new Transport(data).load()).then(result => {
                if (result != "OK") {
                    alert("Failed!")
                    return
                }
                window.location.href = "{{ url_for('webinterface.agents') }}"
            });
        }

        function delete_all() {
            fetch("{{ url_for('service.agents') }}", {
                method: 'DELETE',
                headers: {
                    'key': 'secret-key',
                }
            }).then(response => response.text())
            .then(data => new Transport(data).load()).then(result => {
                if (result != "OK") {
                    alert("Failed!")
                    return
                }
                window.location.href = "{{ url_for('webinterface.agents') }}"
            });
        }
    </script>
{% endblock %}