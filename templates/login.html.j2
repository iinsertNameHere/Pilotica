{% extends 'base.html.j2' %}

{% block title %}Pilotica - Login{% endblock %}

{% block static %}{% endblock %}

{% block body %}
    <!-- Card -->
    <div class="container" style="margin-top: 5%;">
    <div class="row justify-content-center">
        <div class="col-md-6">
        <div class="card-dark my-5">
            <div class="card-header">
            <center><img width="50%" src="{{ url_for('static', filename='logo.svg') }}"></center>
            <h4 style="margin-top: 10px;" class="card-title text-center">Login</h4>
            </div>
            <div class="card-body" style="margin-top: 5px;">
            <!-- Login Form -->
            <form method="POST">
                <div class="form-group">
                <label for="name"">Operator Name</label>
                <input type="text" placeholder="Operator Name" name="name" id="name" class="form-control dark-input" required autofocus>
                </div>
                <div class="form-group" style="margin-top: 20px;">
                <label for="password">Password</label><input type="password" placeholder="Password" name="password" id="password" class="form-control dark-input" required>
                
                </div>
                <center><button type="submit" class="btn btn-block" style="margin-top: 20px; background-color:#ff8800; color:white; font-weight: 600">Login</button></center>
            </form>
            </div>
        </div>
        </div>
    </div>
    </div>
{% endblock %}